################################################################################
# 変数
################################################################################
REPOSITORY_NAME := job-app-01

################################################################################
# マクロ
################################################################################

################################################################################
# タスク
################################################################################
.PHONY: docker-build
docker-build:
	docker build ./ --tag $(REPOSITORY_NAME):latest

.PHONY: docker-run
docker-run:
	docker run --rm -it --mount type=bind,source=${HOME}/.aws/,target=/root/.aws/ job-app-01:latest `date -d '1 month ago' +'%Y-%m'`-01 `date '+%Y-%m'`-01
